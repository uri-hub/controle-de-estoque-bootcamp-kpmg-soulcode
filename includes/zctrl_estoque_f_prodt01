FORM F_PRODUTO USING LV_COMMAND TYPE C .
  DATA(LO_PRODUTO) = NEW ZCL_PRODUTO( P_PROD_ID = P_PDT_ID  P_DESC = P_DESCR P_PRECO = P_PRECO P_QTD = P_QTD P_CATEGORIA = P_CATEG ).

  CASE LV_COMMAND.
    WHEN 'ADD'.
      IF P_PDT_ID IS NOT INITIAL.
        LO_PRODUTO->CRIAR_PRODUTO( LV_PROD_ID = P_PDT_ID LV_DESC = P_DESCR LV_PRECO = P_PRECO LV_QTD = P_QTD LV_CATEGORIA = P_CATEG ).
      ENDIF.
    WHEN 'UPDT'.
      IF P_PDT_ID IS INITIAL.
        MESSAGE 'ID do produto é obrigatório para atualização!' TYPE 'E'.
        RETURN.
      ENDIF.
      LO_PRODUTO->ATUALIZAR_PRODUTO( LV_PROD_ID = P_PDT_ID LV_DESC = P_DESCR LV_PRECO = P_PRECO LV_QTD = P_QTD LV_CATEGORIA = P_CATEG ).
    WHEN 'DEL'.
      IF P_PDT_ID IS INITIAL.
        MESSAGE 'ID do produto é obrigatório para exclusão!' TYPE 'E'.
        RETURN.
      ENDIF.
      LO_PRODUTO->DELETAR_PRODUTO( LV_PROD_ID = P_PDT_ID ).
    WHEN 'SHOW'.
      LO_PRODUTO->LISTAR_PRODUTOS( ).
    WHEN OTHERS.
      MESSAGE 'Comando inválido!' TYPE 'E'.
  ENDCASE.

ENDFORM.
